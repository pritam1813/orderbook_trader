# Binance API credentials (required)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Environment (default: true for testnet)
USE_TESTNET=true

# Trading configuration
SYMBOL=BTCUSDT
QUANTITY=0.001
LEVERAGE=10

# Direction settings
INITIAL_DIRECTION=LONG
DIRECTION_SWITCH_LOSSES=3

# Strategy selection: 'orderbook' or 'risk_reward'
STRATEGY=orderbook

# Orderbook strategy levels (used when STRATEGY=orderbook)
# Entry: 2nd level of bids (for LONG) or asks (for SHORT)
ENTRY_LEVEL=2
# Take Profit: 10th level of asks (for LONG) or bids (for SHORT)
TP_LEVEL=10
# Stop Loss: 8th level of bids (for LONG) or asks (for SHORT)
SL_LEVEL=8

# Risk-reward strategy settings (used when STRATEGY=risk_reward)
# Risk:Reward ratio (e.g., 2 = 1:2, TP is 2x the SL distance)
RISK_REWARD_RATIO=2
# Stop loss distance as percentage of entry price
SL_DISTANCE_PERCENT=0.1

# Order timeout in seconds (wait for limit order fill)
ORDER_TIMEOUT_SECONDS=30

# TP SL Monitor 
TPSL_MONITOR_INTERVAL_SECONDS=5

# Logging
LOG_LEVEL=info

DASHBOARD_PORT=3000